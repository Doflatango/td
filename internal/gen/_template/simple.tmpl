{{ define "simple" }}
{{ $pkg := $.Package }}
{{ template "header" $ }}

{{ range $s:= $.Structs }}
// {{ $s.Comment }}
type {{ $s.Name }} struct {
{{- range $f := $s.Fields }}
    // {{ $f.Comment }}
    {{ $f.Name }} {{ $f.Type }}
{{ end -}}
}

// Encode implements bin.Encoder.
func ({{ $s.Receiver }} {{ $s.Name }}) Encode(b *bin.Buffer) {
    b.PutID(0x{{ $s.HexID }})
{{- range $f := $s.Fields }}
    b.{{ $f.PutFunc }}({{ $s.Receiver }}.{{ $f.Name }})
{{- end }}
}

var _ bin.Encoder = {{ $s.Name }}{}
{{ end }}

{{ end }}
